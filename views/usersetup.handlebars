                        </label>
                        <!-- RADIO BUTTON SHIP 3 -->
                        <label>
                            <input id="shipthree" type="radio" class="nes-radio is-dark" name="answer-dark ship" />
                            <span>Ship 3 *insert pic here*</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <!-- GAME MODE AND DIFFICULTY LEVEL -->
        <div class="row">
            <div class="col s6">
                <div class="nes-container is-dark with-title">
                    <p class="title">GAME MODE</p>
                    <!-- RADIO BUTTON GAME MODE JOE -->
                    <div style="background-color:#212529; padding: 1rem 0;">
                        <label>
                            <input id="modejoe" type="radio" class="nes-radio is-dark" name="answer-dark mode"
                                checked />
                            <span>Joe'pocolypse</insert></span>
                        </label>
                        <!-- RADIO BUTTON GAME MODE DENIS -->
                        <label>
                            <input id="modedenis" type="radio" class="nes-radio is-dark" name="answer-dark mode" />
                            <span>Menacing Denis</span>
                        </label>
                        <!-- RADIO BUTTON GAME MODE CLINT -->
                        <label>
                            <input id="modeclint" type="radio" class="nes-radio is-dark" name="answer-dark mode" />
                            <span>Clint'astrophy</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="col s6">
                <div class="nes-container is-dark with-title">
                    <p class="title">DIFFICULTY LEVEL</p>
                    <!-- RADIO BUTTON DIFFICULTY EASY -->
                    <div style="background-color:#212529; padding: 1rem 0;">
                        <label>
                            <input id="leveleasy" type="radio" class="nes-radio is-dark" name="answer-dark level"
                                checked />
                            <span>EASY</insert></span>
                        </label>
                        <!-- RADIO BUTTON DIFFICULTY MEDIUM -->
                        <label>
                            <input id="levelnormal" type="radio" class="nes-radio is-dark" name="answer-dark level" />
                            <span>NORMAL</span>
                        </label>
                        <!-- RADIO BUTTON DIFFICULTY HIGH -->
                        <label>
                            <input id="levelhardcore" type="radio" class="nes-radio is-dark" name="answer-dark level" />
                            <span>HARD CORE</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <!-- BUTTONS TO PLAY GAME OR LOG OUT -->
        <div class="row">
            <div class="col s6">
                <button id="startgame" type="button" class="nes-btn">PLAY GAME</button>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <button id="logout" type="button" class="nes-btn">Log Out</button>
            </div>
