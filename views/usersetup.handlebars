                        <!-- RADIO BUTTON SONG 2 -->
                        <label>
                            <input id="songtwo" type="radio" class="nes-radio is-dark" name="answer-dark song" />
                            <span>Song 2</span>
                        </label>
                        <!-- RADIO BUTTON SONG 3 -->
                        <label>
                            <input id="songthree" type="radio" class="nes-radio is-dark" name="answer-dark song" />
                            <span>Song 3</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="col s6">
                <div class="nes-container is-dark with-title">
                    <p class="title">SHIP CHOICE</p>
                    <!-- RADIO BUTTON SHIP 1 -->
                    <div style="background-color:#212529; padding: 1rem 0;">
                        <label>
                            <input id="shipone" type="radio" class="nes-radio is-dark" name="answer-dark ship"
                                checked />
                            <span>Ship 1 *insert pic here*</insert></span>
                        </label>
                        <!-- RADIO BUTTON SHIP 2 -->
                        <label>
                            <input id="shiptwo" type="radio" class="nes-radio is-dark" name="answer-dark ship" />
